!! URxvt Appearance

URxvt.font: xft:Iosevka:style=Regular:size=16
URxvt.boldFont: xft:Iosevka:style=Bold:size=16
URxvt.italicFont: xft:Iosevka:style=Italic:size=16
URxvt.boldItalicFont: xft:Iosevka:style=Bold Italic:size=16


URxvt.letterSpace: 0

URxvt.lineSpace: 0

URxvt.geometry: 92x24

URxvt.internalBorder: 12

URxvt.cursorBlink: true

URxvt.cursorUnderline: false

URxvt.saveline: 2048

URxvt.scrollBar: false

URxvt.scrollBar_right: false

URxvt.urgentOnBell: true

URxvt.depth: 48

URxvt.iso14755: false



!! Common Keybinds for Navigations

URxvt.keysym.Shift-Up: command:\033]720;1\007

URxvt.keysym.Shift-Down: command:\033]721;1\007

URxvt.keysym.Control-Up: \033[1;5A

URxvt.keysym.Control-Down: \033[1;5B

URxvt.keysym.Control-Right: \033[1;5C

URxvt.keysym.Control-Left: \033[1;5D


!! transparency - true or false (default)
URxvt*transparent: true 


!! shading - 0 to 99 darkens, 101 to 200 lightens.
!!   Dont use with tintColor; just use a darker or lighter color instead.
URxvt*shading: 15 

!! Copy Paste & Other Extensions, font-size

URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select,font-size

URxvt.clipboard.autocopy: true

URxvt.clipboard.copycmd: xsel -ib

URxvt.clipboard.pastecmd: xsel -ob

URxvt.keysym.Control-Alt-c: perl:clipboard:copy



URxvt.keysym.Control-Alt-v: perl:clipboard:paste

URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

URxvt.keysym.Alt-Escape: perl:keyboard-select:activate

URxvt.keysym.Control-Alt-s: perl:keyboard-select:search

URxvt.keysym.Control-Alt-u: perl:url-select:select_next

URxvt.urlLauncher: firefox

URxvt.underlineURLs: true

URxvt.urlButton: 1

!! Changing font size on the fly, courtesy of daithiw44 Githubs code.

URxvt.keysym.Control-+:     perl:font-size:increase
URxvt.keysym.Control--:   perl:font-size:decrease
