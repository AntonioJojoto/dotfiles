#!/bin/bash

sel=$(echo -e "Leer PDFs Universidad\nLeer Apuntes\nTomar Apuntes\nLibros\nTiempo Valencia\nTiempo Alicante\n\nSuspender\nHibernar\nApagar\nReiniciar" | rofi -dmenu -theme Pop-Dark -font "Iosevka 14" -lines 10 -p "Que quieres hacer?") && echo $sel


case $sel in
	"Leer PDFs Universidad")
		~/bin/find_3ro;;	
	"Leer Apuntes")
		~/bin/find_apunte;;
	"Libros")
		~/bin/find_book;;
	"Tomar Apuntes")
		~/bin/tomar_apunte;;
	"Tiempo Valencia")
		~/bin/urxvt -e Tiempo;;
	"Tiempo Valencia")
		~/bin/urxvt -e Tiempo_alicante;;
	"Susperder")
		~/bin/systemctl suspend;;
	"Hibernar")
		~/bin/systemctl hibernate;;
	"Apagar")
		~/bin/poweroff;;
	"Reinciar")
		~/bin/reboot;;






esac
