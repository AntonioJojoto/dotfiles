#!/bin/bash

target=$(find ~/Lectures -name "*.mp4" | grep -v \
.stversions | awk ' 
function basename(file) {
	sub(".*Lectures/", "", file)
	return file
} {print(basename($0))} ' | rofi -dmenu -theme Pop-Dark -font "Iosevka 14" -i -p "Elige un pdf")
if test -z "$target"
then
	echo "No pdf selected"
else
	zathura ~/Lectures/"$target"
fi

echo $target
